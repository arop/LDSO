<%= render 'common/header' %>

</head>
<body>
<%= render 'common/navbar' %>

<div class="container">
<p id="notice"><%= notice %></p>

<h1> Os meus planos de reabilitação </h1>

  <div class="table-responsive">
    <table class="table">
      <tr>
        <th>Data de criação</th>
        <th>Editar</th>
        <th>Apagar</th>
      </tr>

      <% @reabilitacaos.each do |reabilitacao| %>
          <tr>
            <td><%= reabilitacao.created_at.strftime("%d/%m/%Y - %H:%M") %></td>
            <td><%= link_to 'Editar', edit_reabilitacao_path(reabilitacao) %></td>
            <td><%= link_to 'Apagar', reabilitacao, method: :delete, data: {confirm: 'Tem a certeza que pretende apagar?'} %></td>
          </tr>
      <% end %>
    </table>
  </div>


<br>

<%= link_to 'Novo plano de reabilitação', new_reabilitacao_path %>
<%= render 'common/footer' %>