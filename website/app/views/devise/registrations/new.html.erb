<%= render 'common/header' %>

</head>
<body>
<%= render 'common/navbar' %>

<div class="container">

<h2>Registo </h2>
<br>
<%= simple_form_for(resource, as:resource_name, url:registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome, required:true, autofocus:true %>
    <%= f.input :email, required:true %>
    <%= f.input :password, required:true, hint: ("#{@minimum_password_length} caracteres no minimo" if @minimum_password_length) %>

    <%= f.input :password_confirmation, :label => "Confirmação da password" , required:true %>

    <%= f.label :distrito_id %>
    <%= f.select :distrito_id, Distrito.all.collect {|d| [ d.nome, d.id ] },{:include_blank => 'Escolha o distrito'} %>

    <%= f.label :concelho_id %>
    <%= f.select :concelho_id, [],{:include_blank => 'Escolha o concelho'} %>

    <%= f.input :telef, :label => "Telefone/Telemóvel" %>

    <%= f.input :habilitacoes, :label => "Habilitações" %>

    <%= f.input :profissao, :label => "Profissão" %>

    <%= f.label :formacao, "Fez formação na aplicação?" %>
    <%= label :formacao_sim, 'Sim' %>
    <%= f.radio_button :formacao, 'Sim' %>
    <%= label :formacao_nao, 'Não' %>
    <%= f.radio_button :formacao, 'Nao' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Registar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>


<%= render 'common/footer' %>