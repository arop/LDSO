<div>
  <h2>Guardarios</h2>

  <div class="table-responsive">
    <table class="table table-hover table-striped">
      <thead>
      <tr>
      <tr>
        <th>Rio</th>
        <th>Utilizador</th>
        <th>Data de criação</th>
        <th>Mostrar</th>
        <th>Apagar</th>
      </tr>
      </thead>
      <tbody>
      <% @guardarios.each do |guardario| %>
          <tr>
            <td><%= link_to guardario.nomeRio, rio_path(guardario.rio) %></td>
            <% username = User.find(guardario.user_id).nome %>
            <td><%= guardario.user_id %> - <%= username %></td>
            <td><%= guardario.created_at.strftime("%d/%m/%Y - %H:%M") %></td>
            <td><%= link_to 'Mostrar', guardario %></td>
            <td><%= link_to 'Apagar', guardario, method: :delete, data: {confirm: 'Tem a certeza que pretende apagar?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <%= will_paginate @guardarios, :previous_label => 'Anterior', :next_label => 'Seguinte' %>
</div>