<%= render 'common/header' %>
</head>
<body>
<%= render 'common/navbar' %>


<div class="container">
  <h1> Admin panel </h1>

  <%= form_for :user, :url => 'changePermissions', :html => { :method => :post } do |f| %>
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Data de registo</th>
            <th>Nº de logins</th>
            <th>Nível Acesso</th>
            <th>Atribuir permissões</th>
          </tr>
        </thead>
        <tbody>
          <% for user in @users %>
            <tr>
              <%= hidden_field_tag "user_ids[]", user.id %>
              <td><%= user.id %></td>
              <td><%= user.nome %></td>
              <td><%= user.email %></td>
              <td><%= user.created_at.strftime("%d/%m/%Y - %H:%M") %></td>
              <td><%= user.sign_in_count %></td>
              <td><%= user.permissoes %></td>
            <td>
              <%= select_tag  "permissoes[]", options_for_select(['1','2','3','4','5','6'],user.permissoes),
                           :class => 'form-control'%>
            </td>
          <% end %>
        </tbody>
      </table>
      <%= will_paginate @users, :previous_label => 'Anterior', :next_label => 'Seguinte' %>

      <p><%= f.submit "Submeter" , :class => 'btn btn-primary' %></p>
  <% end %>
</div>

<%= render 'common/footer' %>
