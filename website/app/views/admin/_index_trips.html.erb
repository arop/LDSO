<div>
  <h2>Trips</h2>

  <div class="table-responsive">
    <table class="table table-hover table-striped">
      <thead>
      <tr>
        <th>Id</th>
        <th>Rio</th>
        <th>Criado em</th>
        <th>Editado em</th>
        <th>Ver</th>
        <th>Editar</th>
        <th>Apagar</th>
      </tr>
      </thead>
      <tbody>
      <% @trips.each do |trip| %>
          <tr>
            <td><%= trip.id %></td>
            <td><%= link_to trip.nomeRio, trip_path(trip.idRio) %></td>
            <td><%= trip.created_at.strftime("%d/%m/%Y - %H:%M") %></td>
            <td><%= trip.updated_at.strftime("%d/%m/%Y - %H:%M") %></td>
            <td><%= link_to 'Ver', trip_path(trip) %></td>
            <td><%= link_to 'Editar', edit_trip_path(trip) %></td>
            <td><%= link_to 'Apagar', trip_path(trip), method: :delete, data: {:confirm => "Tem a certeza que quer apagar a trip?"} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <%= will_paginate @trips, :previous_label => 'Anterior', :next_label => 'Seguinte' %>
</div>