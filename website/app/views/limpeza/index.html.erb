<%= render 'common/header' %>

</head>
<body>
<%= render 'common/navbar' %>
<div class="container">
  <p id="notice"><%= notice %></p>

  <h1> Consultas de limpeza de rios <%= link_to 'Nova denúncia', new_report_path, class: 'btn btn-primary' %></h1>

  <div class="table-responsive">
    <table class="table">
      <tr>
        <th>Código rio</th>
        <th>Nº utilizador</th>
        <th>Mostrar</th>
        <th>Apagar</th>
      </tr>

      <% @limpezas.each do |limpeza| %>
          <tr>
            <td><%= limpeza.rio %></td>
            <td><%= limpeza.user_id %></td>
            <td><%= link_to 'Mostrar', limpeza %></td>
            <td><%= link_to 'Apagar', limpeza, method: :delete, data: {confirm: 'Tem a certeza que pretende apagar?'} %></td>
          </tr>
      <% end %>
    </table>
  </div>
</div>

<%= render 'common/footer' %>