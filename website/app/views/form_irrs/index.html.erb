<%= render 'common/header' %>
</head>
<body>
<%= render 'common/navbar' %>

<div class="container">
  <h1>Meus formulários <%= link_to "Novo formulário", new_form_irr_path, class: "btn btn-primary" %></h1>

  <div class="table-responsive">
    <table class="table table-hover table-striped">
      <tr>
        <th>Id</th>
        <th>Rio</th>
        <th>Margem</th>
        <th>Criado em</th>
        <th>Editado em</th>
        <th>Ver</th>
        <th>Editar</th>
        <th>Apagar</th>
      </tr>
      <%
         t = Time.current
         cur_timezone = t.zone
      %>
      <% @form_irrs.each do |form_irr| %>
          <tr>
            <td><%= form_irr.id %></td>
            <td>Nome do rio</td>
            <td>
              <% if form_irr.margem == 1 %>
                  Esquerda
              <% else %>
                  Direita
              <% end %>
            </td>
            <td><%= form_irr.created_at.in_time_zone(cur_timezone).strftime("%d/%m/%Y - %H:%M") %></td>
            <td><%= form_irr.updated_at.strftime("%d/%m/%Y - %H:%M") %></td>
            <td><%= link_to 'Ver', form_irr_path(form_irr) %></td>
            <td><%= link_to 'Editar', edit_form_irr_path(form_irr) %></td>
            <td><%= link_to 'Apagar', form_irr_path(form_irr), method: :delete, data: {:confirm => "Tem a certeza que quer apagar o formulário?"} %></td>
          </tr>
      <% end %>
    </table>
  </div>
</div>

<%= render 'common/footer' %>