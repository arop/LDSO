<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_irr_1" tools:context="engenheiro.rios.IRR.IRR_1_2">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="CaracterÃ­sticas de rio/ribeira"
            android:id="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Substrato do leito \n(selecionar os que tem mais de 35%)"
            android:id="@+id/textView5"
            android:layout_margin="10dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:id="@+id/scrollView3"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/relativeLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/irr_1_5_1"
                android:id="@+id/irr_1_5_1"
                android:layout_margin="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calhaus (20-40cm)"
                android:id="@+id/irr_1_5_2"
                android:layout_margin="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cascalho (2-20cm)"
                android:id="@+id/irr_1_5_3"
                android:layout_margin="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Areia (0.5-2cm)"
                android:id="@+id/irr_1_5_4"
                android:layout_margin="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/irr_1_5_5"
                android:id="@+id/irr_1_5_5"
                android:layout_margin="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solo"
                android:id="@+id/irr_1_5_6"
                android:layout_margin="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artificial"
                android:id="@+id/irr_1_5_7"
                android:layout_margin="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nao e visivel"
                android:id="@+id/irr_1_5_8"
                android:layout_margin="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/relativeLayout"
        android:layout_marginTop="10dp">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt; Anterior"
            android:id="@+id/button5"
            android:background="@null"
            android:textColor="@color/colorNegative"
            android:minHeight="30dp"
            android:onClick="goto_previous"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seguinte >"
            android:id="@+id/button6"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:textColor="@color/colorPrimaryDark"
            android:minHeight="30dp"
            android:onClick="goto_next"/>

    </RelativeLayout>

</RelativeLayout>
