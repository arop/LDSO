<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_homepage" tools:context=".Homepage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rios +"
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOS Rios+"
        android:id="@+id/button_avaliacoes"
        android:layout_marginTop="48dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/title"
        android:layout_toStartOf="@+id/title"
        android:onClick="sosRios"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotas Rios+"
        android:id="@+id/button_rotas"
        android:layout_alignBottom="@+id/button_avaliacoes"
        android:layout_toRightOf="@+id/title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Formulários IRR"
        android:id="@+id/button_irr_form"
        android:layout_marginTop="55dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:onClick="fomr_irr"
        android:layout_below="@+id/button_avaliacoes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_avaliacoes"
        android:layout_alignEnd="@+id/button_avaliacoes" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mapa"
        android:id="@+id/button"
        android:layout_alignTop="@+id/button_irr_form"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/title"
        android:layout_toEndOf="@+id/title"
        android:onClick="mapas_init"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mais Informação"
        android:id="@+id/contacts_button"
        android:layout_marginBottom="36dp"
        android:background="@null"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:onClick="about"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
