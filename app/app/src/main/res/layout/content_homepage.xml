<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_homepage" tools:context=".MainActivities.Homepage">

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="SOS Rios+"
        android:id="@+id/button_avaliacoes"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:onClick="sosRios"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Rotas Rios+"
        android:id="@+id/button_rotas"
        android:onClick="rotasRios"
        android:layout_alignBottom="@+id/button_avaliacoes"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Formulários IRR"
        android:id="@+id/button_irr_form"
        android:layout_marginTop="55dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:onClick="form_irr"
        android:layout_below="@+id/button_avaliacoes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_avaliacoes"
        android:layout_alignEnd="@+id/button_avaliacoes" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mais Informação"
        android:id="@+id/contacts_button"
        android:layout_marginBottom="36dp"
        android:background="@null"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:onClick="about"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpeza "
        android:id="@+id/button3"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:onClick="limpeza"
        android:layout_alignTop="@+id/button_irr_form"
        android:layout_alignLeft="@+id/button_rotas"
        android:layout_alignStart="@+id/button_rotas"
        android:layout_alignRight="@+id/button_rotas"
        android:layout_alignEnd="@+id/button_rotas" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@mipmap/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp" />

</RelativeLayout>
