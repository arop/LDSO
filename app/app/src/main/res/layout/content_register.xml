<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_register2" tools:context="ldso.rios.RegisterActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/UserNameRegisterEditText"
                android:hint="Nome"
                android:layout_centerHorizontal="true" />

            <AutoCompleteTextView
                android:maxLines="1"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/EmailRegisterEditText"
                android:hint="Email"
                android:layout_below="@+id/UserNameRegisterEditText"
                android:layout_alignLeft="@+id/UserNameRegisterEditText"
                android:layout_alignStart="@+id/UserNameRegisterEditText"
                android:layout_alignRight="@+id/UserNameRegisterEditText"
                android:layout_alignEnd="@+id/UserNameRegisterEditText" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/PasswordRegisterEditText"
                android:hint="Password"
                android:layout_below="@+id/EmailRegisterEditText"
                android:layout_alignLeft="@+id/EmailRegisterEditText"
                android:layout_alignStart="@+id/EmailRegisterEditText"
                android:layout_alignRight="@+id/EmailRegisterEditText"
                android:layout_alignEnd="@+id/EmailRegisterEditText" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/PasswordConfirmRegisterEditText"
                android:hint="Confirmar Password"
                android:layout_below="@+id/PasswordRegisterEditText"
                android:layout_alignLeft="@+id/PasswordRegisterEditText"
                android:layout_alignStart="@+id/PasswordRegisterEditText"
                android:layout_alignRight="@+id/PasswordRegisterEditText"
                android:layout_alignEnd="@+id/PasswordRegisterEditText" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:hint="Telefone"
                android:id="@+id/TelefoneRegisterEditText"
                android:layout_below="@+id/PasswordConfirmRegisterEditText"
                android:layout_alignLeft="@+id/PasswordConfirmRegisterEditText"
                android:layout_alignStart="@+id/PasswordConfirmRegisterEditText"
                android:layout_alignRight="@+id/PasswordConfirmRegisterEditText"
                android:layout_alignEnd="@+id/PasswordConfirmRegisterEditText" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Profissão"
                android:id="@+id/ProfissaoRegisterEditText"
                android:layout_below="@+id/TelefoneRegisterEditText"
                android:layout_alignLeft="@+id/TelefoneRegisterEditText"
                android:layout_alignStart="@+id/TelefoneRegisterEditText"
                android:layout_alignRight="@+id/TelefoneRegisterEditText"
                android:layout_alignEnd="@+id/TelefoneRegisterEditText" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Habilitações"
                android:id="@+id/HabilitacoesRegisterEditText"
                android:layout_below="@+id/ProfissaoRegisterEditText"
                android:layout_alignLeft="@+id/ProfissaoRegisterEditText"
                android:layout_alignStart="@+id/ProfissaoRegisterEditText"
                android:layout_alignRight="@+id/ProfissaoRegisterEditText"
                android:layout_alignEnd="@+id/ProfissaoRegisterEditText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registar"
                android:id="@+id/RegisterButton"
                android:onClick="register"
                android:background="@null"
                android:textColor="@color/colorPrimaryDark"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/FormacaoRegisterSwitch"
                android:layout_marginTop="30dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fez formação na app?"
                android:id="@+id/FormacaoRegisterSwitch"
                android:checked="false"
                android:layout_below="@+id/HabilitacoesRegisterEditText"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
