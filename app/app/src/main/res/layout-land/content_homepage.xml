<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_homepage" tools:context=".MainActivities.Homepage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rios +"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Avaliações"
        android:id="@+id/button_avaliacoes"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="66dp"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Rotas Rios+"
        android:id="@+id/button_rotas"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp"
        android:layout_alignTop="@+id/button_avaliacoes"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Novo Formulário"
        android:id="@+id/button_irr_form"
        android:layout_marginTop="28dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:onClick="fomr_irr"
        android:layout_below="@+id/button_avaliacoes"
        android:layout_alignLeft="@+id/button_avaliacoes"
        android:layout_alignStart="@+id/button_avaliacoes" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Rios"
        android:id="@+id/button"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:onClick="mapas_init"
        android:layout_alignTop="@+id/button_irr_form"
        android:layout_alignLeft="@+id/button_rotas"
        android:layout_alignStart="@+id/button_rotas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contactos e Documentos"
        android:id="@+id/contacts_button"
        android:background="@null"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:onClick="about"
        android:layout_below="@+id/button_irr_form"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView19"
        android:layout_above="@+id/button"
        android:layout_alignRight="@+id/contacts_button"
        android:layout_alignEnd="@+id/contacts_button" />

</RelativeLayout>